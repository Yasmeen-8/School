package classwork1;

import java.util.Scanner; 

public class Practical52 {

	private static Scanner input;
	
	public static void main(String[] args) {
		
		Scanner input = new Scanner (System.in);
		
		String[] itemname = {"beef burger","Vegetable pizza","cheese sticks","soda"};
		double[] price = {2.000,5.000,1.000,0.300};
		
		
		int order; 
			System.out.println("please input the number of your order");
			order = input.nextInt ();
			
			int no;
			System.out.println("how many do you want?");
					no = input.nextInt();
					double tax = 0.1;
					int OA = order - 1;
					double Vat = price[OA] * tax + price[OA]; 
					double TP = Vat * no ;
					
			switch (order) {
				case 1:
					System.out.println("Item         | price with out the Tax  | Quantity | price after tax" );
				    System.out.println(itemname[OA] +"  |  "+ price[OA]  +"  |  "+ no +"  |  "+  Vat  );
				    System.out.println();
				    System.out.println("total price : " + TP);
				    
				    break;
			  case 2:
				  System.out.println("Item         | price with out the Tax  | Quantity | price after tax" );
				    System.out.println(itemname[OA] +"  |  "+ price[OA]  +"  |  "+ no +"  |  "+  Vat  );
				    System.out.println();
				    System.out.println("total price : " + TP);
			    break;
			  case 3:
				  System.out.println("Item         | price with out the Tax  | Quantity | price after tax" );
				    System.out.println(itemname[OA] +"  |  "+ price[OA]  +"  |  "+ no +"  |  "+  Vat  );
				    System.out.println();
				    System.out.println("total price : " + TP);
			    break;
			  case 4:
				  System.out.println("Item         | price with out the Tax  | Quantity | price after tax" );
				    System.out.println(itemname[OA] +"  |  "+ price[OA]  +"  |  "+ no +"  |  "+  Vat  );
				    System.out.println();
				    System.out.println("total price : " + TP);
			    break;
			  default:
			  System.out.println("please input a valid order number from 1 to 4 ");
			  	break;

			    
			}
	}

}
