package classwork1;

import java.util.Scanner; 

public class Practical5 {

	private static Scanner input;
	
	public static void main(String[] args) {
		
		Scanner input = new Scanner (System.in);
		int weekday; 
			System.out.println("what is today's weekday? ");
			weekday = input.nextInt ();
					
			
			switch (weekday) {
				case 1:
				    System.out.println("it is Sunday");
				    System.out.println("make sure to Buy groceries");
				    break;
			  case 2:
			    System.out.println("it is Monday");
			    System.out.println("try Reading a book");
			    
			    break;
			  case 3:
			    System.out.println("it is Tuesday");
			    System.out.println("time to Clean the house");
			    break;
			  case 4:
			    System.out.println("it is Wednesday");
			    System.out.println("try to Call your relatives");
			    break;
			  case 5:
			    System.out.println("it is Thursday");
			    System.out.println("time to Play football");
			    break;
			  case 6:
			    System.out.println("it is Friday");
			    System.out.println("there will be a Family lunch tonight");
			    break;
			  case 7:
			    System.out.println("it is Saturday");
			    System.out.println("you can Watch a movie");
			    break;
			  default:
			  System.out.println("please input a valid weekday 1-7");
			  	break;

			    
			}
	}

}
